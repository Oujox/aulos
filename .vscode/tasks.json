{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "test",
      "type": "shell",
      "command": "python -m pytest",
      "group": {
        "kind": "test",
        "isDefault": true
      },
      "problemMatcher": []
    },
    {
      "label": "test with coverage",
      "type": "shell",
      "command": "python -m pytest --cov=./src/aulos --cov-report=html:./documents/coverage/html",
      "group": {
        "kind": "test"
      },
      "problemMatcher": []
    },
    {
      "label": "formater",
      "type": "shell",
      "command": "black ./src/aulos ./tests/aulos ; isort ./src/aulos ./tests/aulos",
      "problemMatcher": []
    },
    {
      "label": "linter",
      "type": "shell",
      "command": "ruff check ./src/aulos ./tests/aulos",
      "problemMatcher": []
    },
    {
      "label": "type-check",
      "type": "shell",
      "command": "mypy ./src/aulos ./tests/aulos",
      "problemMatcher": []
    }
  ]
}
